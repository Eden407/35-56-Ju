import sys
import requests
from bs4 import BeautifulSoup
import urllib.parse
import urllib3

# Disable insecure request warnings (for testing only)
urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

# ANSI color codes for terminal output
RED = "\033[31m"
GREEN = "\033[32m"
YELLOW = "\033[33m"
BLUE = "\033[34m"
RESET = "\033[0m"

def search_ios_app(app_name):
    query = urllib.parse.quote(app_name)
    # Use the iTunes Search API to get the app's public page URL
    search_url = f"https://itunes.apple.com/search?term={query}&entity=software"
    headers = {"User-Agent": "Mozilla/5.0"}
    try:
        response = requests.get(search_url, headers=headers, verify=False)
        response.raise_for_status()
        data = response.json()
        if not data.get("results"):
            print(f"{RED}[iOS] No results found for '{app_name}'.{RESET}")
            return
        app_url = data["results"][0].get("trackViewUrl")
        if not app_url:
            print(f"{RED}[iOS] App URL not found in search results.{RESET}")
            return
    except Exception as e:
        print(f"{RED}[iOS] Failed to get app page: {e}{RESET}")
        return

    # Fetch the app's detail page HTML
    try:
        html = requests.get(app_url, headers=headers, verify=False).text
        soup = BeautifulSoup(html, "html.parser")
    except Exception as e:
        print(f"{RED}[iOS] Failed to fetch or parse page: {e}{RESET}")
        return

    # Extract Version Info by scanning list items for one that starts with "Version"
    version = None
    for li in soup.find_all("li"):
        text = li.get_text(strip=True)
        if text.startswith("Version"):
            version = text.replace("Version", "").strip()
            break
    if not version:
        version = "Version not found"

    # Extract Release Notes by finding an <h2> with "What’s New" and grabbing the next <p> or <div>
    release_notes = "Release notes not found"
    h2 = soup.find("h2", string=lambda s: s and "What’s New" in s)
    if h2:
        next_block = h2.find_next(["p", "div"])
        if next_block:
            release_notes = next_block.get_text(separator="\n", strip=True)

    print(f"\n{BLUE}[iOS]{RESET}")
    print(f"{GREEN}App URL:{RESET} {app_url}")
    print(f"{YELLOW}Version:{RESET} {version}")
    print(f"{YELLOW}Release Notes:{RESET}\n{release_notes}")

def search_android_app(app_name):
    query = urllib.parse.quote(app_name)
    search_url = f"https://play.google.com/store/search?q={query}&c=apps&hl=en&gl=us"
    headers = {"User-Agent": "Mozilla/5.0"}
    try:
        r = requests.get(search_url, headers=headers)
        r.raise_for_status()
        soup = BeautifulSoup(r.text, "html.parser")
        # Find the first app detail link from Google Play
        app_link = soup.select_one("a[href^='/store/apps/details?id=']")
        if not app_link:
            print(f"{RED}[Android] App '{app_name}' not found on Google Play.{RESET}")
            return
        app_url = "https://play.google.com" + app_link["href"]
        r = requests.get(app_url, headers=headers)
        r.raise_for_status()
        soup = BeautifulSoup(r.text, "html.parser")
        
        title_tag = soup.find("h1", class_="AHFaub")
        title = title_tag.get_text(strip=True) if title_tag else "Unknown App"
        
        # "What's New" on Google Play is typically in a div with class "W4P4ne"
        whats_new_section = soup.find("div", class_="W4P4ne")
        release_notes = whats_new_section.get_text(separator="\n", strip=True) if whats_new_section else "No release notes found."
        
        print(f"\n{BLUE}[Android]{RESET}")
        print(f"{GREEN}{title}{RESET}")
        print(f"{YELLOW}Release Notes:{RESET}\n{release_notes}")
    except Exception as e:
        print(f"{RED}[Android] Error fetching app details: {e}{RESET}")

def main():
    try:
        app_name = input(f"{YELLOW}Enter the app name to check: {RESET}").strip()
    except EOFError:
        sys.exit(f"{RED}No input provided. Exiting.{RESET}")
    
    if not app_name:
        sys.exit(f"{RED}No app name provided. Exiting.{RESET}")
    
    print(f"\nFetching latest release info for '{app_name}'...")
    search_ios_app(app_name)
    search_android_app(app_name)

if __name__ == "__main__":
    main()
